<ivy-module version="2.0" xmlns:m="http://ant.apache.org/ivy/maven">
  <info organisation="org.jminor" module="jminor-plugin-json"/>

  <configurations>
    <conf name="runtime"/>
    <conf name="sources"/>
    <conf name="javadoc"/>
  </configurations>

  <publications>
    <artifact name="jminor-plugin-json" type="jar" ext="jar" conf="runtime"/>
    <artifact name="jminor-plugin-json" type="pom" ext="pom" conf="runtime"/>
    <artifact name="jminor-plugin-json-sources" type="source" ext="jar" conf="sources" m:classifier="sources"/>
    <artifact name="jminor-plugin-json-javadoc" type="javadoc" ext="jar" conf="javadoc" m:classifier="javadoc"/>
  </publications>

  <dependencies defaultconf="runtime->default">
    <dependency org="org.jminor" name="jminor-common-model" rev="latest.integration"/>
    <dependency org="org.jminor" name="jminor-db-core" rev="latest.integration"/>

    <dependency org="org.slf4j" name="slf4j-api" rev="1.7.7" transitive="false"/>
    <dependency org="ch.qos.logback" name="logback-classic" rev="1.1.2" transitive="false"/>
    <dependency org="ch.qos.logback" name="logback-core" rev="1.1.2" transitive="false"/>

    <dependency org="org.json" name="json" rev="20090211" transitive="false"/>
  </dependencies>
</ivy-module>
