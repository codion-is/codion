<ivy-module version="2.0" xmlns:m="http://ant.apache.org/ivy/maven">
  <info organisation="org.jminor" module="jminor-plugin-rest"/>

  <configurations defaultconfmapping="runtime">
    <conf name="runtime"/>
    <conf name="sources"/>
    <conf name="javadoc"/>
  </configurations>

  <publications>
    <artifact name="jminor-plugin-rest" type="jar" ext="jar" conf="runtime"/>
    <artifact name="jminor-plugin-rest" type="pom" ext="pom" conf="runtime"/>
    <artifact name="jminor-plugin-rest-sources" type="source" ext="jar" conf="sources" m:classifier="sources"/>
    <artifact name="jminor-plugin-rest-javadoc" type="javadoc" ext="jar" conf="javadoc" m:classifier="javadoc"/>
  </publications>

  <dependencies defaultconf="runtime">
    <dependency org="org.jminor" name="jminor-common-model" rev="latest.integration"/>
    <dependency org="org.jminor" name="jminor-db-core" rev="latest.integration"/>
    <dependency org="org.jminor" name="jminor-plugin-json" rev="latest.integration"/>

    <dependency org="org.slf4j" name="slf4j-api" rev="1.7.7"/>
    <dependency org="ch.qos.logback" name="logback-classic" rev="1.1.3"/>
    <dependency org="ch.qos.logback" name="logback-core" rev="1.1.3"/>

    <dependency org="org.json" name="json" rev="20090211"/>

    <dependency org="javax.ws.rs" name="jsr311-api" rev="1.1.1"/>
    <dependency org="com.sun.jersey" name="jersey-bundle" rev="1.19"/>
    <dependency org="asm" name="asm" rev="3.3.1"/>
    <dependency org="org.eclipse.jetty.toolchain" name="jetty-osgi-servlet-api" rev="3.1.0.M3"/>
  </dependencies>
</ivy-module>
