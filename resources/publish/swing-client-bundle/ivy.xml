<ivy-module version="2.0" xmlns:m="http://ant.apache.org/ivy/maven">
  <info organisation="org.jminor" module="jminor-swing-client-bundle"/>

  <configurations defaultconfmapping="runtime">
    <conf name="runtime"/>
    <conf name="sources"/>
    <conf name="javadoc"/>
  </configurations>

  <publications>
    <artifact name="jminor-swing-client-bundle" type="jar" ext="jar" conf="runtime"/>
    <artifact name="jminor-swing-client-bundle" type="pom" ext="pom" conf="runtime"/>
    <artifact name="jminor-swing-client-bundle-sources" type="source" ext="jar" conf="sources" m:classifier="sources"/>
    <artifact name="jminor-swing-client-bundle-javadoc" type="javadoc" ext="jar" conf="javadoc" m:classifier="javadoc"/>
  </publications>

  <dependencies defaultconf="runtime">
    <dependency org="org.slf4j" name="slf4j-api" rev="1.7.7"/>
    <dependency org="ch.qos.logback" name="logback-classic" rev="1.1.3"/>
    <dependency org="ch.qos.logback" name="logback-core" rev="1.1.3"/>

    <dependency org="org.json" name="json" rev="20090211"/>
    <dependency org="com.toedter" name="jcalendar" rev="1.4"/>
  </dependencies>
</ivy-module>
