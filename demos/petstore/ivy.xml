<ivy-module version="2.0" xmlns:m="http://ant.apache.org/ivy/maven">
  <info organisation="org.jminor" module="jminor-demo-petstore"/>

  <configurations defaultconfmapping="compile">
    <conf name="compile"/>
    <conf name="runtime" extends="compile"/>
    <conf name="test" extends="runtime"/>
    <conf name="sources"/>
    <conf name="javadoc"/>
  </configurations>

  <dependencies defaultconf="compile->default">
    <dependency org="org.jminor" name="jminor-swing-client-bundle" rev="latest.release"/>
    <dependency org="org.jminor" name="jminor-swing-client-test" rev="latest.release"/>

    <dependency org="org.jfree" name="jcommon" rev="1.0.23" conf="compile->master"/>
    <dependency org="org.jfree" name="jfreechart" rev="1.0.19" conf="compile->master"/>

    <dependency org="org.jminor" name="jminor-db-test" rev="latest.release" conf="test->master"/>

    <dependency org="junit" name="junit" rev="4.12" conf="test->master"/>
    <dependency org="org.hamcrest" name="hamcrest-core" rev="1.3" conf="test->master"/>
    <dependency org="com.h2database" name="h2" rev="1.3.176" conf="test->master"/>
  </dependencies>
</ivy-module>
