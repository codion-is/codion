<ivy-module version="2.0" xmlns:m="http://ant.apache.org/ivy/maven">
  <info organisation="org.jminor" module="jminor-demo-world"/>

  <configurations defaultconfmapping="compile">
    <conf name="compile"/>
    <conf name="runtime" extends="compile"/>
    <conf name="test" extends="runtime"/>
    <conf name="sources"/>
    <conf name="javadoc"/>
  </configurations>

  <dependencies defaultconf="compile->default">
    <dependency org="org.jminor" name="jminor-swing-client-bundle" rev="${version}"/>

    <dependency org="org.jminor" name="jminor-framework-db-test" rev="${version}" conf="test->master"/>
    <dependency org="org.jminor" name="jminor-swing-client-test" rev="${version}" conf="test->master"/>

    <dependency org="com.h2database" name="h2" rev="${h2.version}" conf="runtime->master"/>

    <dependency org="junit" name="junit" rev="${junit.version}" conf="test->master"/>
    <dependency org="org.hamcrest" name="hamcrest-core" rev="${hamcrest-core.version}" conf="test->master"/>
    <dependency org="com.h2database" name="h2" rev="${h2.version}" conf="test->master"/>
  </dependencies>
</ivy-module>
