<?xml version="1.0"?>
<project name="dependencies" default="depend.all">
  <dirname property="dependencies.basedir" file="${ant.file.dependencies}"/>

  <target name="depend.all"
          depends="depend.jminor-common, depend.jminor-framework, depend.jminor-swing,
          depend.jminor-javafx, depend.jminor-framework-server-monitor">
  </target>

  <target name="depend.jminor-common">
    <ant dir="${dependencies.basedir}/common" target="${dependency.target}" inheritAll="false"/>
  </target>

  <target name="depend.jminor-framework"
          depends="depend.jminor-common">
    <ant dir="${dependencies.basedir}/framework" target="${dependency.target}" inheritAll="false"/>
  </target>

  <target name="depend.jminor-swing"
          depends="depend.jminor-common, depend.jminor-framework">
    <ant dir="${dependencies.basedir}/swing" target="${dependency.target}" inheritAll="false"/>
  </target>

  <target name="depend.jminor-javafx"
          depends="depend.jminor-common, depend.jminor-framework">
    <ant dir="${dependencies.basedir}/javafx" target="${dependency.target}" inheritAll="false"/>
  </target>

  <target name="depend.jminor-framework-server-monitor"
          depends="depend.jminor-common, depend.jminor-swing">
    <ant dir="${dependencies.basedir}/server-monitor" inheritAll="false"/>
  </target>

  <target name="depend.jminor-plugin-imagepanel"
          depends="depend.jminor-common, depend.jminor-framework, depend.jminor-swing">
    <ant dir="${dependencies.basedir}/plugins/imagepanel" inheritAll="false"/>
  </target>

  <target name="depend.jminor-plugin-jasperreports"
          depends="depend.jminor-common, depend.jminor-framework, depend.jminor-swing">
    <ant dir="${dependencies.basedir}/plugins/jasperreports" inheritAll="false"/>
  </target>

  <target name="depend.jminor-plugin-json"
          depends="depend.jminor-common, depend.jminor-framework">
    <ant dir="${dependencies.basedir}/plugins/json" inheritAll="false"/>
  </target>

  <target name="depend.jminor-plugin-nextreports"
          depends="depend.jminor-common, depend.jminor-framework, depend.jminor-swing">
    <ant dir="${dependencies.basedir}/plugins/nextreports" inheritAll="false"/>
  </target>

  <target name="depend.jminor-plugin-rest"
          depends="depend.jminor-common, depend.jminor-framework, depend.jminor-plugin-json">
    <ant dir="${dependencies.basedir}/plugins/rest" inheritAll="false"/>
  </target>

  <target name="depend.jminor-plugin-tomcat-pool"
          depends="depend.jminor-common">
    <ant dir="${dependencies.basedir}/plugins/tomcat-pool" inheritAll="false"/>
  </target>
</project>