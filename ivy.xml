                conf="
                build.plugins->master;
                runtime.tests->master;
                runtime.server->master"/>
    <dependency org="org.eclipse.jetty" name="jetty-servlet" rev="9.0.4.v20130625" transitive="false"
                conf="
                build.plugins->master;
                runtime.tests->master;
                runtime.server->master"/>
    <dependency org="org.eclipse.jetty" name="jetty-util" rev="9.0.4.v20130625" transitive="false"
                conf="
                build.plugins->master;
                runtime.tests->master;
                runtime.server->master"/>
    <dependency org="org.eclipse.jetty" name="jetty-http" rev="9.0.4.v20130625" transitive="false"
                conf="
                runtime.tests->master;
                runtime.server->master"/>
    <dependency org="org.eclipse.jetty" name="jetty-io" rev="9.0.4.v20130625" transitive="false"
