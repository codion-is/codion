                runtime.tests->master;
                runtime.client->master;
                runtime.server->master"/>
    <dependency org="com.itextpdf" name="itextpdf" rev="5.5.0" transitive="false"
                conf="
                runtime.client->master"/>
    <dependency org="com.itextpdf" name="itext-pdfa" rev="5.5.0" transitive="false"
