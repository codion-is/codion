<ivy-module version="2.0">
  <info organisation="org.jminor" module="jminor" />

  <configurations>
    <conf name="ant.util" description="Utilities required by the build process" />
    <conf name="build.core" description="used for building core framework components" />
    <conf name="build.plugins" description="used for building framework plugins" />
    <conf name="build.demos" description="used for building framework demos" />
    <conf name="runtime.tests" description="used for running unit tests and compiling demo reports" />
    <conf name="runtime.client" description="used for running a remote or local client" />
    <conf name="runtime.server" description="used for running a server instance" />
    <conf name="runtime.server-monitor" description="used for running a server monitor instance" />
  </configurations>

  <dependencies>
    <!--build utilities-->
    <dependency org="org.jacoco" name="org.jacoco.ant" rev="0.7.5.201505241946" conf="ant.util->default"/>
    <dependency org="org.apache.ivy" name="ivy" rev="2.4.0" conf="ant.util->default"/>
    <dependency org="com.threerings" name="getdown" rev="1.4" conf="ant.util->default"/>
    <!--logging-->
    <dependency org="org.slf4j" name="slf4j-api" rev="1.7.7" transitive="false"
                conf="
                build.core->master;
                build.plugins->master;
                runtime.tests->master;
                runtime.client->master;
                runtime.server->master;
                runtime.server-monitor->master"/>
    <dependency org="ch.qos.logback" name="logback-core" rev="1.1.3" transitive="false"
                conf="
                build.core->master;
                runtime.tests->master;
                runtime.client->master;
                runtime.server->master;
                runtime.server-monitor->master"/>
    <dependency org="ch.qos.logback" name="logback-classic" rev="1.1.3" transitive="false"
                conf="
                build.core->master;
                build.plugins->master;
                runtime.tests->master;
                runtime.client->master;
                runtime.server->master;
                runtime.server-monitor->master"/>
    <!--unit testing-->
    <dependency org="junit" name="junit" rev="4.12" transitive="false"
                conf="
                build.core->master;
                runtime.tests->master"/>
    <dependency org="org.hamcrest" name="hamcrest-core" rev="1.3" transitive="false"
                conf="
                runtime.tests->master"/>
    <!--charting for the server monitor and load test-->
    <dependency org="org.jfree" name="jcommon" rev="1.0.23" transitive="false"
                conf="
                build.core->master;
                runtime.tests->master;
                runtime.client->master;
                runtime.server-monitor->master"/>
    <dependency org="org.jfree" name="jfreechart" rev="1.0.19" transitive="false"
                conf="
                build.core->master;
                runtime.tests->master;
                runtime.client->master;
                runtime.server-monitor->master"/>
    <!--client date input handling-->
    <dependency org="com.toedter" name="jcalendar" rev="1.4" transitive="false"
                conf="
                runtime.client->master"/>
    <!--JasperReports plugin-->
    <dependency org="net.sf.jasperreports" name="jasperreports" rev="6.0.0" transitive="false"
                conf="
                build.plugins->master;
                runtime.tests->master;
                runtime.client->master;
                runtime.server->master"/>
    <dependency org="commons-beanutils" name="commons-beanutils" rev="1.9.0" transitive="false"
                conf="
                runtime.tests->master;
                runtime.client->master;
                runtime.server->master"/>
    <dependency org="commons-collections" name="commons-collections" rev="3.2.1" transitive="false"
                conf="
                runtime.tests->master;
                runtime.client->master;
                runtime.server->master"/>
    <dependency org="commons-digester" name="commons-digester" rev="2.1" transitive="false"
                conf="
                runtime.tests->master;
                runtime.client->master;
                runtime.server->master"/>
    <dependency org="commons-logging" name="commons-logging" rev="1.1.1" transitive="false"
