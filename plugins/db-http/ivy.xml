<ivy-module version="2.0" xmlns:m="http://ant.apache.org/ivy/maven">
  <info organisation="org.jminor" module="jminor-plugin-db-http"/>

  <configurations defaultconfmapping="compile->default">
    <conf name="compile"/>
    <conf name="runtime" extends="compile"/>
    <conf name="test" extends="runtime"/>
    <conf name="sources"/>
    <conf name="javadoc"/>
  </configurations>

  <publications>
    <artifact name="jminor-plugin-db-http" type="jar" ext="jar" conf="compile"/>
    <artifact name="jminor-plugin-db-http" type="pom" ext="pom" conf="compile"/>
    <artifact name="jminor-plugin-db-http-sources" type="source" ext="jar" conf="sources" m:classifier="sources"/>
    <artifact name="jminor-plugin-db-http-javadoc" type="javadoc" ext="jar" conf="javadoc" m:classifier="javadoc"/>
  </publications>

  <dependencies defaultconf="compile">
    <dependency org="org.jminor" name="jminor-framework-db-core" rev="${version}"/>
    <dependency org="org.jminor" name="jminor-plugin-json" rev="${version}"/>

    <dependency org="org.json" name="json" rev="${json.version}"/>

    <dependency org="org.apache.httpcomponents" name="httpclient" rev="4.5"/>
    <dependency org="org.apache.httpcomponents" name="httpcore" rev="4.4.1"/>
    <dependency org="commons-logging" name="commons-logging" rev="1.1.1"/>

    <dependency org="org.jminor" name="jminor-framework-server" rev="${version}" conf="test->default"/>
    <dependency org="org.jminor" name="jminor-plugin-rest" rev="${version}" conf="test->default"/>
    <dependency org="com.h2database" name="h2" rev="${h2.version}" conf="test->master"/>
    <dependency org="junit" name="junit" rev="${junit.version}" conf="test->master"/>
    <dependency org="org.hamcrest" name="hamcrest-core" rev="${hamcrest-core.version}" conf="test->master"/>
  </dependencies>
</ivy-module>