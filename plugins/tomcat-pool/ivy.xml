<ivy-module version="2.0" xmlns:m="http://ant.apache.org/ivy/maven">
  <info organisation="org.jminor" module="jminor-plugin-tomcat-pool"/>

  <configurations defaultconfmapping="compile">
    <conf name="compile"/>
    <conf name="runtime" extends="compile"/>
    <conf name="test" extends="runtime"/>
    <conf name="sources"/>
    <conf name="javadoc"/>
  </configurations>

  <publications>
    <artifact name="jminor-plugin-tomcat-pool" type="jar" ext="jar" conf="compile"/>
    <artifact name="jminor-plugin-tomcat-pool" type="pom" ext="pom" conf="compile"/>
    <artifact name="jminor-plugin-tomcat-pool-sources" type="source" ext="jar" conf="sources" m:classifier="sources"/>
    <artifact name="jminor-plugin-tomcat-pool-javadoc" type="javadoc" ext="jar" conf="javadoc" m:classifier="javadoc"/>
  </publications>

  <dependencies defaultconf="compile->default">
    <dependency org="org.jminor" name="jminor-common-core" rev="${version}"/>
    <dependency org="org.jminor" name="jminor-common-db" rev="${version}"/>
    <dependency org="org.jminor" name="jminor-common-model" rev="${version}"/>

    <dependency org="org.apache.tomcat" name="tomcat-jdbc" rev="8.0.24" conf="compile->master"/>
    <dependency org="org.apache.tomcat" name="tomcat-juli" rev="8.0.24" conf="compile->master"/>

    <dependency org="com.h2database" name="h2" rev="1.4.192" conf="test->master"/>
    <dependency org="junit" name="junit" rev="4.12" conf="test->master"/>
    <dependency org="org.hamcrest" name="hamcrest-core" rev="1.3" conf="test->master"/>
  </dependencies>
</ivy-module>
