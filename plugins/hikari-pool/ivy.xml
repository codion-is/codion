<ivy-module version="2.0" xmlns:m="http://ant.apache.org/ivy/maven">
  <info organisation="org.jminor" module="jminor-plugin-hikari-pool"/>

  <configurations defaultconfmapping="compile">
    <conf name="compile"/>
    <conf name="runtime" extends="compile"/>
    <conf name="test" extends="runtime"/>
    <conf name="sources"/>
    <conf name="javadoc"/>
  </configurations>

  <publications>
    <artifact name="jminor-plugin-hikari-pool" type="jar" ext="jar" conf="runtime"/>
    <artifact name="jminor-plugin-hikari-pool" type="pom" ext="pom" conf="runtime"/>
    <artifact name="jminor-plugin-hikari-pool-sources" type="source" ext="jar" conf="sources" m:classifier="sources"/>
    <artifact name="jminor-plugin-hikari-pool-javadoc" type="javadoc" ext="jar" conf="javadoc" m:classifier="javadoc"/>
  </publications>

  <dependencies defaultconf="compile->default">
    <dependency org="org.jminor" name="jminor-common-core" rev="${version}"/>
    <dependency org="org.jminor" name="jminor-common-db" rev="${version}"/>

    <dependency org="com.zaxxer" name="HikariCP" rev="2.6.3" conf="compile->master"/>

    <dependency org="com.h2database" name="h2" rev="${h2.version}" conf="test->master"/>
    <dependency org="junit" name="junit" rev="${junit.version}" conf="test->master"/>
    <dependency org="org.hamcrest" name="hamcrest-core" rev="${hamcrest-core.version}" conf="test->master"/>
  </dependencies>
</ivy-module>
