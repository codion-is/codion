<project name="jminor-plugin-jasperreports">
  <property name="project.root" value="../.."/>
  <property name="java.module.name" value="org.jminor.plugin.jasperreports"/>
  <import file="${project.root}/build-common.xml"/>

  <target name="build" depends="common.build">
    <taskdef name="jrc" classname="net.sf.jasperreports.ant.JRAntCompileTask">
      <classpath refid="lib.test"/>
    </taskdef>
    <mkdir dir="build/classes/reports/test"/>
    <jrc srcdir="src/test/reports" includes="**/*.jrxml" destdir="build/classes/reports/test"/>
  </target>
</project>