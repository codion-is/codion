<ivy-module version="2.0" xmlns:m="http://ant.apache.org/ivy/maven">
  <info organisation="org.jminor" module="jminor-plugin-nextreports"/>

  <configurations defaultconfmapping="compile">
    <conf name="compile"/>
    <conf name="runtime" extends="compile"/>
    <conf name="test" extends="runtime"/>
    <conf name="sources"/>
    <conf name="javadoc"/>
  </configurations>

  <publications>
    <artifact name="jminor-plugin-nextreports" type="jar" ext="jar" conf="compile"/>
    <artifact name="jminor-plugin-nextreports" type="pom" ext="pom" conf="compile"/>
    <artifact name="jminor-plugin-nextreports-sources" type="source" ext="jar" conf="sources" m:classifier="sources"/>
    <artifact name="jminor-plugin-nextreports-javadoc" type="javadoc" ext="jar" conf="javadoc" m:classifier="javadoc"/>
  </publications>

  <dependencies defaultconf="compile->default">
    <dependency org="org.jminor" name="jminor-common-core" rev="${version}"/>
    <dependency org="org.jminor" name="jminor-common-db" rev="${version}"/>
    <dependency org="org.jminor" name="jminor-common-model" rev="${version}"/>

    <dependency org="ro.nextreports" name="nextreports-engine" rev="8.2" conf="compile->master"/>

    <dependency org="org.apache.commons" name="commons-jexl" rev="2.1.1" conf="runtime->master"/>
    <dependency org="com.thoughtworks.xstream" name="xstream" rev="1.4.8" conf="runtime->master"/>

    <dependency org="org.jminor" name="jminor-framework-db-local" rev="${version}" conf="test->default"/>
    <dependency org="org.jminor" name="jminor-swing-client-model" rev="${version}" conf="test->default"/>
    <dependency org="com.h2database" name="h2" rev="1.3.176" conf="test->master"/>
    <dependency org="commons-logging" name="commons-logging" rev="1.1.1" conf="test->master"/>
    <dependency org="com.itextpdf" name="itextpdf" rev="5.5.0" conf="test->master"/>

    <dependency org="junit" name="junit" rev="4.12" conf="test->master"/>
    <dependency org="org.hamcrest" name="hamcrest-core" rev="1.3" conf="test->master"/>
  </dependencies>
</ivy-module>
